<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.TextAppearance.AppCompat.Title"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.ahmed.ui.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/feeling"
            android:textColor="@color/yellow_50"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/name"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/rudepressed"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/deep_orange_100"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/letsfindout"
            android:textColor="@color/yellow_50"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="5dp"
            android:padding="5dp"/>



        <Button
            android:id="@+id/StartSensingButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="50sp"
            android:background="@color/white"
            android:onClick="onSensingButtonClickedToStart"
            android:text="@string/sensing_start"
            android:textColor="@color/btn_login"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/StopSensingButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@color/white"
            android:onClick="onSensingButtonClickedToStop"
            android:text="@string/sensing_stop"
            android:textColor="@color/welcome_color_2" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@color/white"
            android:text="@string/LOGOUT"
            android:textColor="@color/blue_grey_500" />
        <!--    <Button
